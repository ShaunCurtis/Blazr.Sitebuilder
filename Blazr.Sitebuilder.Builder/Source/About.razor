@page "/about"
@using Blazr.SiteBuilder
@using System.Diagnostics
@implements IContentComponent
@inject ContentRenderer _contentRenderer;

<LayoutView Layout="@typeof(ArticleLayout)" />

<SectionContent SectionName="page-header-data">

    @SiteHtmlProvider.SeoHeaderHtml(_contentRenderer)
    @SiteHtmlProvider.OgHeaderHtml(_contentRenderer)

</SectionContent>

<SectionContent SectionName="side-bar">

    @SiteHtmlProvider.CategoryListHtml(_contentRenderer)

</SectionContent>

<SectionContent SectionName="main-content">

    <div class="container-fluid">

        <!-- Content Row -->
        <div class="row">
            <div class="col-6 col-lg-7 col-xl-7">
                <div class="text-container pt-5 pl-5">
                    <h2><span>Hi, I'm Shaun</span><br> aka Cold Elm Coders</h2>
                    <p>An Internet old timer, with all the scars and opinionated views too many years of experience bring!</p>
                    <p>And a traveller to places less travelled.</p>
                    <p>If you want history, I was one of <a href="https://en.wikipedia.org/wiki/Demon_Internet">Demon Internet's </a> first 100 customers and one of the first with a 64Kb fixed line.  I probably configured and ran the first global VPN network.  I was sending emails and configuring VPN's on the nascent Internet when most of you were but stars in the sky.</p>
                    <p>And I'm still learning!</p>

                    <p><strong><i>Knowledge will help you solve a problem you have yet to experience.</i></strong></p>
                </div> <!-- end of text-container -->
            </div> <!-- end of col -->
            <div class="col-6 col-lg-5 col-xl-5">
                <div class="image-container text-center">
                    <img class="img-80" src="/resources/images/south.jpg" alt="alternative">
                </div> <!-- end of image-container -->
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <!-- Content Row -->
        <div class="row">

            <!-- What am I working on? -->
            <div class="col-12 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    What am I working on?
                                </div>
                                <p></p>
                                <ul class="list-unstyled li-space-lg">
                                    <li class="d-flex">
                                        <i class="fas fa-code"></i>
                                        <div class="ml-3 flex-grow-1">Building a DotNetCore Static Web Site Builder.  It's what built this site!</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-code"></i>
                                        <div class="ml-3 flex-grow-1">A Better Blazor Template.</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-code"></i>
                                        <div class="ml-3 flex-grow-1">A Blazor Database Application Template</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-code"></i>
                                        <div class="ml-3 flex-grow-1">Authentication and Authorization</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-code"></i>
                                        <div class="ml-3 flex-grow-1">Blazor Testing</div>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-code fa-2x text-gray-600"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Where have I been doing all these years? -->
            <div class="col-12 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Where have I been all these years?
                                </div>
                                <ul class="list-unstyled li-space-lg">
                                    <li class="d-flex">
                                        <i class="fas fa-oil-can"></i>
                                        <div class="ml-3 flex-grow-1">Oil Driller</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-globe"></i>
                                        <div class="ml-3 flex-grow-1">Internet First Adopter</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-users"></i>
                                        <div class="ml-3 flex-grow-1">Web Hosting CTO</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-code"></i>
                                        <div class="ml-3 flex-grow-1">DoteNetCore developer</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-keyboard"></i>
                                        <div class="ml-3 flex-grow-1">Article Writer</div>
                                    </li>
                                    <li class="d-flex">
                                        <i class="fas fa-question"></i>
                                        <div class="ml-3 flex-grow-1">Question Answerer</div>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-address-card fa-2x text-gray-600"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">

            <!-- Code Credits, Copyright and Licencing -->
            <div class="col-12">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Code Credits, Copyright and Licencing
                                </div>
                                <p>
                                    I make no claims that most of my code is original. &nbsp;The sources are primarily the DotNetCore Github Site,
                                    MS Docs, and other Internet sources too many to mention. &nbsp;I take what I can, lift it, usually adapt it, and use it:
                                    life is too short to re-invent the wheel! &nbsp;
                                    If I use blocks of code "as is" or with little change, the class file header will give credit where credit is due.
                                </p>
                                <p>
                                    <strong>My Code</strong> is covered by an "Unofficial" <strong>Use it and Donate</strong> license. &nbsp;
                                    If you use it, give credit in the file header, and make a donation to a charity somewhere. &nbsp;
                                    It doesn't matter which, and it doesn't matter how much: it <strong>Will</strong> make a difference somewhere. &nbsp;
                                </p>
                                <p>
                                    My charity is <a href="https://donate.barnardos.org.uk/">Barnados</a>, so if you don't have a favourite donate <a href="https://donate.barnardos.org.uk/">here</a>. &nbsp;
                                    Some of the people I worked with at Fasthosts gave up their Christmas morning to go and give the kids in Bristol
                                    a family Christmas.
                                </p>
                                <p>
                                    Don't talk about, think about, .... : <strong>just <a href="https://donate.barnardos.org.uk/">click</a> and DONATE.</strong>
                                </p>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-money fa-2x text-gray-600"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end of container -->

</SectionContent>


@code {
    public PageData PageData { get; } = new()
        {
            Title = "Cold Elm Coders",
            Author = "Shaun Curtis",
            Description = "About Cold Elm Coders",
            Category = string.Empty,
            HideInNavigationLists = true,
            DefaultRoute = true
        };
}
